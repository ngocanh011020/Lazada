<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        >
        <LinearLayout

            android:background="@drawable/shopee"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:id="@+id/headerTop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lazada"
                android:layout_marginTop="18dp"
                android:textSize="20dp"
                android:textColor="#fff"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="138dp"
                android:background="@drawable/shopee12"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shopee13"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rootView"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/headerBottom">


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#fff">
            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button1"
                    android:background="@drawable/shopee2"
                    android:layout_width="60dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="40dp"

                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Tất Cả"
                    android:textAlignment="center"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/button2"
                    android:background="@drawable/shopee3"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp"

                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Sắp Diễn Ra"
                    android:textAlignment="center"
                    android:textColor="#ee4e2e"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button3"
                    android:background="@drawable/shopee4"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp"

                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Idol Review"
                    android:textAlignment="center"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button4"
                    android:background="@drawable/shopee8"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp"

                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Mới Nhất"
                    android:textAlignment="center"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button5"
                    android:background="@drawable/shopee9"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp"

                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Xem Lại"
                    android:textAlignment="center"
                    android:textColor="#000"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:background="#ffeecc"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>